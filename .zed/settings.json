{
  "preferred_line_length": 79,
  "autosave": "on_focus_change",
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "docker-compose": true,
    "python": true,
    "shell": true,
    "powershell": true,
    "ruff": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": true
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true
    }
  },
  "experimental.theme_overrides": {
    "terminal.background": "#1e1e1e",
    "terminal.foreground": "#d4d4d4"
  },
  "current_line_highlight": "all",
  "show_inline_completions": true,
  "show_completions_on_input": true,
  "wrap_guides": [
    79
  ],
  "formatter": "language_server",
  "outline_panel": {
    "dock": "right",
    "button": true
  },
  "languages": {
    "Python": {
      "language_servers": [
        "ruff",
        "pyright"
      ],
      "format_on_save": "off",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Markdown": {
      "preferred_line_length": 80,
      "soft_wrap": "preferred_line_length"
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 79,
          "lint": {
            "extendSelect": [
              "PTH",
              "ANN204",
              "COM812",
              "F401",
              "E501",
              "S603",
              "ERA001",
              "UP006",
              "UP007",
              "UP035",
              "ARG002",
              "FIX002",
              "TD003",
              "S404",
              "PLC0415",
              "CPY001",
              "F841"
            ],
            "extendIgnore": [
              "F402",
              "INP001",
              "TRY003",
              "PTH118",
              "COM812"
            ],
            "variableRegex": "^(_+|(_+[a-zA-Z0-9_]*[a-zA-Z0-9]+?))$"
          }
        }
      }
    }
  }
}
