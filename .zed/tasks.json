[
  {
    "label": "Git Clone all repositories",
    "command": "uv",
    "args": [
      "run",
      "git-clone-all-repos"
    ],
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Upload addon to server and restart",
    "command": "uv",
    "args": [
      "run",
      "upload-to-addon-folder",
      "-f",
      "$ZED_RELATIVE_FILE",
      "--debug"
    ],
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Update AYON server",
    "command": "uv",
    "args": [
      "run",
      "update-ayon-docker-local-dir"
    ],
    "use_new_terminal": true,
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Initialize Docs",
    "command": "uv",
    "args": [
      "run",
      "docs-initialize"
    ],
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Start Docs",
    "command": "uv",
    "args": [
      "run",
      "docs-start"
    ],
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never"
  },
  {
    "label": "Git commit info extraction",
    "command": "uv",
    "args": [
      "run",
      "git-commit-info-extraction",
      "-f",
      "$ZED_RELATIVE_FILE"
    ],
    "reveal": "always",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "hide": "never"
  },
  {
    "label": "Ruff check current file",
    "command": "uv",
    "args": [
      "run",
      "ruff",
      "check",
      "$ZED_RELATIVE_FILE"
    ],
    "reveal": "always",
    "hide": "on_success"
  }
]
