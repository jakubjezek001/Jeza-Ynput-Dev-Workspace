[
  {
    "label": "Git Clone all repositories",
    "command": "uv run git-clone-all-repos",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Upload addon to server and restart",
    "command": "uv run upload-to-addon-folder",
    "args": [
      "-f",
      "$ZED_RELATIVE_FILE",
      "--debug"
    ],
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Update AYON server",
    "command": "uv run update-ayon-docker-local-dir",
    "use_new_terminal": true,
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Initialize Docs",
    "command": "uv run docs-initialize",
    "shell": "system",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Start Docs",
    "command": "cd $ZED_WORKTREE_ROOT/ayon-documentation/website && yarn start",
    "shell": "system",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never"
  },
  {
    "label": "Build Docs",
    "command": "cd $ZED_WORKTREE_ROOT/ayon-documentation/website && yarn build",
    "shell": "system",
    "reveal": "always",
    "hide": "on_success"
  }
]
