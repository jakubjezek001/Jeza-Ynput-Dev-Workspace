[
  {
    "label": "Git Clone all repositories",
    "command": "git-clone-all-repos",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Upload addon to server and restart",
    "command": "upload-to-addon-folder",
    "args": [
      "-f",
      "$ZED_RELATIVE_FILE",
      "--debug"
    ],
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Update AYON server",
    "command": "cd ayon-docker && docker compose pull server && docker compose up -d server",
    "use_new_terminal": true,
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Initialize Docs",
    "command": "cd $ZED_WORKTREE_ROOT/ayon-documentation/website && npm install -g yarn && yarn add docusaurus --dev",
    "shell": "system",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Start Docs",
    "command": "cd $ZED_WORKTREE_ROOT/ayon-documentation/website && yarn start",
    "shell": "system",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never"
  },
  {
    "label": "Build Docs",
    "command": "cd $ZED_WORKTREE_ROOT/ayon-documentation/website && yarn build",
    "shell": "system",
    "reveal": "always",
    "hide": "on_success"
  }
]
